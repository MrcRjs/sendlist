
@import colors
@import bootstrapp_override
@import mixins

h1,h2,h3,h4,h5,.section-title
	font-family 'Open Sans', 'sans-serif'

body
	font-family 'Raleway', 'sans-serif'

p.text
	font-family 'Libre Baskerville', 'serif'
	

.container.fit
	max-width 600px
	margin 0 auto

navbar_height = 61px

.pull-left
	float left
.pull-right
	float right

.ov-auto
	overflow auto
	
.switch.plain
	background-color #fff
	border-color gray

.logo
	display block
	border-radius 50%
	background-color logo
	width 30px
	height 30px
	margin 0 auto
	i
		color #fff
.logo.huge
	width 100px
	height 100px
	i
		line-height 100px
		font-size 2.5em	

.input-block
	margin-bottom 10px

.facebook
	background-color facebook


.padded
	padding 10px

.nav-bar
	border-bottom 1px solid softlines
	min-height navbar_height
	position absolute
	top 0px
	left 0px
	width 100%

.theview
	padding-top navbar_height

.sl-user
	.pic
		roundpic()
		width 35px
		height 35px
	.name
		ellipsable()
		line-height 35px
		max-width 300px
		margin-left 10px
	.pic,.name
		display inline-block
		
.section-title
	font-size 1.7em
	font-weight bold
	margin-top 20px
	margin-bottom 15px

.no-touchevents .list-group-item:hover
	box-shadow 0 0 10px 2px softlines
	transition box-shadow 0.3s ease
	
.list-group-item
	cursor pointer
	input
		float right

ul.list-items,ul.list-items.list-group
	li
		border-radius 0px
		border-left 0px
		border-right 0px

span.badge.empty
	font-size 0.75em
	background-color lines

span.badge.checked
	background-color main

.scrollable-list
	display block
	height 400px
	height 54.5vh
	overflow auto

.scrollable-list::-webkit-scrollbar-track
	background-color transparent

.scrollable-list::-webkit-scrollbar
	width 7px
	background-color transparent

.scrollable-list::-webkit-scrollbar-thumb
	border-radius 3px
	background-color lines

.backer
	cursor pointer
	line-height 35px
	font-size 1.45em